<Window x:Class="InteractiveCSharp.Course"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InteractiveCSharp"
        mc:Ignorable="d"
        Title="Course" Height="300" Width="258" WindowStartupLocation="CenterScreen">
    <Grid>
        <ListBox x:Name="Themes" HorizontalAlignment="Left" Height="173" Margin="10,10,0,0" VerticalAlignment="Top" Width="113"/>
        <ListBox x:Name="Problems" HorizontalAlignment="Left" Height="173" Margin="128,10,0,0" VerticalAlignment="Top" Width="113"/>
        <Button x:Name="Choose" Content="Выбрать" HorizontalAlignment="Left" Margin="80,214,0,0" VerticalAlignment="Top" Width="91" Click="Choose_Click"/>
        <Button x:Name="Cancel" Content="Отмена" HorizontalAlignment="Left" Margin="80,239,0,0" VerticalAlignment="Top" Width="91" Click="Cancel_Click"/>
        <Button x:Name="ThemeOpen" Content="Открыть тему" HorizontalAlignment="Left" Margin="80,188,0,0" VerticalAlignment="Top" Width="91" Click="ThemeOpen_Click"/>

    </Grid>
</Window>
