        <RichTextBox x:Name="Code" HorizontalAlignment="Left" Height="458" Margin="83,24,0,0" VerticalAlignment="Top" Width="569" Grid.Column="1">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
