        </RichTextBox>
        <Label Content="Задание" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"/>
        <Label Content="Код программы" HorizontalAlignment="Left" Margin="83,-2,0,0" VerticalAlignment="Top" Grid.Column="1"/>

    </Grid>
</Window>
