        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="103*"/>
            <ColumnDefinition Width="193*"/>
        </Grid.ColumnDefinitions>
        <RichTextBox x:Name="Task" HorizontalAlignment="Left" Height="367" Margin="10,24,0,0" VerticalAlignment="Top" Width="422" Grid.ColumnSpan="2" IsReadOnly="True">
